extends layout

block append styles
  link(rel='stylesheet', href='/stylesheets/index.css')

block content
  div.home.module
    div.container

      div.ccstvan
        div.image
        div.text
          div.title #{__('motto1_title')}
          div.motto 
            div #{__('motto1a')}
            div #{__('motto1b')}
