                    ul(style='padding-left:25px')
                      li(style='list-style:disc') 
                        div #{__('news1_4a')}
                        div #{__('news1_4a2')}
                      li(style='list-style:disc') 
                        div #{__('news1_4b')}
                        div #{__('news1_4b2')}
                      li(style='list-style:disc') 
                        div #{__('news1_4c')}
                        div
                          span #{__('news1_4c2')} &nbsp;
