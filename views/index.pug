extends layout

block append styles
  link(rel='stylesheet', href='/stylesheets/index.css')

block content
  div.home.module
    div.container
      div.top-image-container
        div.logo
        div.content
          div.mottos
            div #{__('motto1')}
            div #{__('motto2')}

            ul.actions
              li.action 
                i.material-icons arrow_right_alt
                a(href='/admissions-programs') #{__('findAProgram')}
              li.action  
                i.material-icons arrow_right_alt
                a(href='/admissions-apply') #{__('applyTo')}
              li.action  
                i.material-icons arrow_right_alt
                span #{__('requestInfo')}
              li.action  
                i.material-icons arrow_right_alt
                span #{__('knowMoreAboutUs')}

    div.container
      div.context
        div.header #{__('whatHappening')}
        div.container.section.side-by-side.building
            div.header 
              div.title #{__('buildingNewsTitle')}
            ul.desc-container
              li #{__('buildingNews1')}
              li #{__('buildingNews2')}
              li #{__('buildingNews3')}
              li #{__('buildingNews4')}





  script(src='javascripts/app/index.js')