          li(style='list-style: disc; margin-left: 25px;') #{__('news3_4')}

        div(style="padding: 25px;")
          iframe(width="100%", height="450px", src="https://www.youtube.com/embed/x3JnH_aGtxM", frameborder="0", allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture")       

  script(src='/javascripts/app/index.js')